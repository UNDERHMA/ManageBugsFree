<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="my_persistence_unit" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>manage_bugs_freeDS</jta-data-source>
    <class>com.munderhill.entities.BugReport</class>
    <class>com.munderhill.entities.Teams</class>
    <class>com.munderhill.entities.Priorities</class>
    <class>com.munderhill.entities.SoftwareVersions</class>
    <class>com.munderhill.entities.LBTReport</class>
    <class>com.munderhill.entities.Statuses</class>
    <class>com.munderhill.entities.BugReportAdditionalNotes</class>
    <class>com.munderhill.entities.Users</class>
    <class>com.munderhill.entities.LBTReportAdditionalNotes</class>
    <class>com.munderhill.entities.BugReportLBTLink</class>
    <class>com.munderhill.entities.SimilarBugReports</class>
    <class>com.munderhill.entities.BRSimilarBugReports</class>
    <class>com.munderhill.entities.LBTSimilarBugReports</class>
    <class>com.munderhill.entities.BugReportHistory</class>
    <class>com.munderhill.entities.LBTReportHistory</class>
    <class>com.munderhill.entities.Topics</class>
    <class>com.munderhill.entities.StatisticsStatuses</class>
    <class>com.munderhill.entities.LineChartData</class>
    <class>com.munderhill.entities.LineChartDataWithInterval</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/manage_bugs_free"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="eclipselink.id-validation" value="NULL"/>
      <property name="eclipselink.logging.parameters" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
